diff --git a/config.def.h b/config.def.h
index 3d86161..3eafbdf 100644
--- a/config.def.h
+++ b/config.def.h
@@ -202,6 +202,7 @@ static Shortcut shortcuts[] = {
 	{ TERMMOD,              XK_Y,           selpaste,       {.i =  0} },
 	{ ShiftMask,            XK_Insert,      selpaste,       {.i =  0} },
 	{ TERMMOD,              XK_Num_Lock,    numlock,        {.i =  0} },
+    { MODKEY,               XK_Return,      newterm,        {.i =  0} },
 
 	{ ControlMask,          XK_Up,          kscrollup,      {.i = +1} },
 	{ ControlMask,          XK_Down,        kscrolldown,    {.i = +1} },
diff --git a/st.c b/st.c
index 0cfe631..56ad93f 100644
--- a/st.c
+++ b/st.c
@@ -186,6 +186,7 @@ typedef struct {
 } STREscape;
 
 static void execsh(char *, char **);
+static char *getcwd_by_pid(pid_t pid);
 static void stty(char **);
 static void sigchld(int);
 static void ttywriteraw(const char *, size_t);
@@ -1095,6 +1096,26 @@ tcursor(int mode)
 	}
 }
 
+void
+newterm(const Arg* a)
+{
+	switch (fork()) {
+	case -1:
+		die("fork failed: %s\n", strerror(errno));
+		break;
+	case 0:
+		chdir(getcwd_by_pid(pid));
+		execlp("st", "./st", NULL);
+		break;
+	}
+}
+
+static char *getcwd_by_pid(pid_t pid) {
+	char buf[32];
+	snprintf(buf, sizeof buf, "/proc/%d/cwd", pid);
+	return realpath(buf, NULL);
+}
+
 void
 tresetcursor(void)
 {
