##############
##	Volume	##
##############

"pactl set-sink-volume @DEFAULT_SINK@ +1%"
	XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ -1%"
	XF86AudioLowerVolume

"pactl set-sink-mute @DEFAULT_SINK@ toggle"
	XF86AudioMute


##################
##	Brightness	##
##################

"backlight_control +2"
	XF86MonBrightnessUp

"backlight_control -2"
	XF86MonBrightnessDown

##################
##	Screenshot	##
##################

"flameshot screen -c"
	Print

"flameshot full -p ~/Pictures/Screenshots && sleep 2 && pkill flameshot"
	Control+Shift+Print

"flameshot screen -p ~/Pictures/Screenshots && sleep 2 && pkill flameshot"
	Shift+Print

"flameshot gui"
	Alt+Print