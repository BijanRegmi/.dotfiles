##############
##	Volume	##
##############

"pactl set-sink-volume @DEFAULT_SINK@ +1%"
	XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ -1%"
	XF86AudioLowerVolume

"pactl set-sink-mute @DEFAULT_SINK@ toggle"
	XF86AudioMute


##################
##	Brightness	##
##################

"backlight_control +2"
	XF86MonBrightnessUp

"backlight_control -2"
	XF86MonBrightnessDown

##################
##	Screenshot	##
##################

"flameshot full -c"
	Print

"flameshot full -p ~/Pictures/Screenshots && pkill flameshot"
	Alt+Print