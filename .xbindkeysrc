##############
##	Volume	##
##############

"pactl set-sink-volume @DEFAULT_SINK@ +1%"
	XF86AudioRaiseVolume

"pactl set-sink-volume @DEFAULT_SINK@ -1%"
	XF86AudioLowerVolume

"pactl set-sink-mute @DEFAULT_SINK@ toggle"
	XF86AudioMute


##################
##	Brightness	##
##################

"backlight_control +2"
	XF86MonBrightnessUp

"backlight_control -2"
	XF86MonBrightnessDown

##################
##	Screenshot	##
##################

"flameshot screen -c"
	Print

"sleep 3 && flameshot gui"
	Control+Shift+Print

"flameshot screen -p ~/Pictures/Screenshots && sleep 2 && pkill flameshot"
	Alt+Print

"flameshot gui"
	Control+Print

##################
## Music Player ##
##################

"mpc toggle"
	XF86AudioPlay

"mpc prev"
	XF86AudioPrev

"mpc next"
	XF86AudioNext